{
    // Combined debug configurations. Keep both a workspace-root cwd profile and a default one.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (workspace root cwd)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}